#include "menuopciones.h"
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>

float IngresarKMS (char mensaje[])
{
	float x;

	printf("%s", mensaje);
	scanf("%f", &x);

	while(x<0 && x != isdigit(x))
	{

		printf("ERROR! Por favor ingrese una distancia valida mayor a 0:");
		scanf("%f", &x);
		break;
	}

	return x;
}
