#include <stdio.h>
#include <stdlib.h>
#include "menuopciones.h"
#include "solicitardatos.h"
#define EXIT 6

int main(void) {
	setbuf(stdout, NULL);
	int opcion;
	float x;
	float y = 0;
	float z = 0;
	int banderaA;
	int banderaB;


	banderaA= 0;
	banderaB= 0;

	do{

		opcion = MenuOpciones( x, y ,z );

		switch(opcion)
		{
			case 1:
				x = IngresarKMS("Ingrese cantidad de kilometros:");
				banderaA=1;
			break;
			case 2:
				y= IngresarPrecioVuelo("Ingrese precio del vuelo de Aerolineas:");
				z= IngresarPrecioVuelo("Ingrese precio del vuelo de LATAM:");
				banderaB=1;
			break;

		}

	}while(opcion != EXIT);


	return EXIT_SUCCESS;
}
