#define BITCOIN 4606954.55

float CalculoTarjeta(float precio)
{
	float descuento;

	descuento = precio * 0.1;
	precio = precio - descuento;

	return precio;
}

float CalculoTarjetaC(float precio)
{
	float descuento;
	descuento = precio * 1.25;
	precio = precio - descuento;

	return precio;
}

float CalculoBitcoin(float precio)
{
	float precioBitcoin;
	precioBitcoin = precio / BITCOIN;

	return precioBitcoin;
}


float CalculoUnitario(float precio)
{
	float precioKM;

	precioKM = precio / km;

	return precioKM;
}

float DiferenciaPrecio(float y, float z)
{
	float diferencia;

	diferencia = z - y;

	return diferencia;
}
