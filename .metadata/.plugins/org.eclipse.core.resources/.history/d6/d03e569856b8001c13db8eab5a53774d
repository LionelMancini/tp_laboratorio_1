#include "menuopciones.h"
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>

float IngresarKMS (char mensaje[])
{
	float auxIng;

	printf("%s", mensaje);
	scanf("%f", &auxIng);

	while(auxIng<0)
	{
		printf("ERROR! Por favor ingrese una distancia valida mayor a 0:");
		scanf("%f", &auxIng);

		if(isdigit(auxIng)==0)
		{
			printf("ERROR! Por favor ingrese un valor numerico");
			scanf("%f", &auxIng);
		}

	}

	return auxIng;
}
